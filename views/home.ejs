<html>

<head>
    <title>

        <%= tittle %>

    </title>
    <script src="//code.jquery.com/jquery-1.12.0.min.js"></script>
    <script src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- font awesome link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
</head>
<script src=" https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

<body>
    <a  href="/users/logout">Logout</a>
    <section class="container">
        <h1 align="center">TODO APP</h1>

        <!-- form to create task -->
        <form action="/home/add-task" method="POST">

            <table class="table">
                <thead>
                    <tr class="table-active">
                        <th>Add notification</th>
                        <th>date</th>
                        <th>time</th>
                        <th></th>
                    </tr>
                </thead>


                <tbody>
                    <tr>
                        <td> <input type="text" id="notification" name="notification"
                                placeholder="enter your notification" required>
                            </th>
                        <td> <input type="date" id="date" name="date" placeholder="enter date" required></th>
                        <td> <input type="time" id="time" name="time" placeholder="enter time" required></th>
                        <td><input type="submit" class="btn btn-success" id="add" value="add notification"></th>
                    </tr>
                </tbody>

            </table>

        </form>

    </section>



    <div>
        <h1 align="center">TASKS LIST</h1>

        <form action="/home/delete-task" method="GET">
            <table class="table">
                <thead>
                    <tr>
                        <th>Select</th>
                        <th>Task</th>
                        <th>due-date</th>
                        <th>due-time</th>
                    </tr>
                </thead>
                <% for(let i of task) { %>

                    <tr>
                        <td> <input type="checkbox" name="<%= i.id %>"></td>
                        <td>
                            <p id="task-description">
                                <%= i.text %>
                        </td>
                        <td>
                            <p id="due-date"></p>
                            <%= i.to_char %>
                        </td>
                        <td>
                            <p id="due-time">
                                <%= i.time %>
                            </p>
                        </td>
                    </tr>

                    <% } %>




            </table>
            <div align="center"><input type="submit" class="btn btn-danger" value="DELETE TASK">
            </div>>
        </form>


    </div>
</body>

</html>