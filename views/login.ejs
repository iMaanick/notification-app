    <main class="form-signin w-100 m-auto">
        <h1 style="margin-top:50px" align="center">Login</h1>
        <ul>
            <% if (typeof errors !='undefined' ) { %>
                <% errors.forEach(error=> { %>
                    <li align="center">
                        <%= error.message %>
                    </li>
                    <% }) %>
                        <% } %>
        </ul>
        <ul>
            <% if(messages.success_msg) {%>
                <li align="center">
                    <%= messages.success_msg %>
                </li>
                <%} %>
        </ul>
        <ul>
            <% if (messages.error) { %>
                <li align="center">
                    <%= messages.error %>
                </li>
                <% } %>
        </ul>
        <form align="center" action="/users/login" method="POST">
            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

            <div class="form-floating">
                <input type="email" class="form-control" id="email" name="email" placeholder="email" required>
                <label for="floatingInput">Email address</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="password" name="password" placeholder="password"
                    required>
                <label for="floatingPassword">Password</label>
            </div>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
            <div  class="nav justify-content-center" >
                <a class="nav-link active" aria-current="page" href="/users/register">Register</a>
            </div>
            <p class="mt-5 mb-3 text-muted">&copy; 2022â€“2022</p>
        </form>
    </main>


